@{
}

@model IEnumerable<Cashier>

<h2>قائمة الباعة</h2>

<p>
    <a class="btn btn-primary" asp-action="AddCashier">إضافة بائع جديد</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>رقم البائع</th>
            <th>اسم البائع</th>
            <th>رقم الفرع</th>
            <th>إجراء</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cashier in Model)
        {
            <tr>
                <td>@cashier.ID</td>
                <td>@cashier.CashierName</td>
                <td>@cashier.BranchID</td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@cashier.ID">تعديل</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@cashier.ID">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>